<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boss.bes.system.manage.mapper.DepartmentMapper">
    <resultMap id="BaseResultMap" type="com.boss.bes.system.manage.pojo.entity.Department">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="mnemonic_code" jdbcType="VARCHAR" property="mnemonicCode"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="level" jdbcType="VARCHAR" property="level"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
        <result column="master" jdbcType="VARCHAR" property="master"/>
        <result column="descript" jdbcType="VARCHAR" property="descript"/>
        <result column="status" jdbcType="BIT" property="status"/>
        <result column="created_by" jdbcType="BIGINT" property="createdBy"/>
        <result column="created_time" jdbcType="TIMESTAMP" property="createdTime"/>
        <result column="updated_by" jdbcType="BIGINT" property="updatedBy"/>
        <result column="updated_time" jdbcType="TIMESTAMP" property="updatedTime"/>
        <result column="version" jdbcType="BIGINT" property="version"/>
        <result column="company_id" jdbcType="BIGINT" property="companyId"/>
    </resultMap>

    <resultMap id="BaseResultWithCompany" type="com.boss.bes.system.manage.pojo.entity.Department">
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
        <result column="company_id" jdbcType="BIGINT" property="companyId"/>
        <association property="parentName" javaType="string" select="getDeptName"
                     column="parent_id"/>
        <association property="companyName" javaType="string"
                     select="com.boss.bes.system.manage.mapper.CompanyMapper.getCompanyName" column="company_id"/>
    </resultMap>

    <select id="queryAllWithPageAndCompany" resultMap="BaseResultWithCompany">
        SELECT *
        FROM tb_department
        <where>
            <choose>
                <when test="parentId  != null">
                    parent_id=#{parentId}
                </when>
                <when test="organizationId == null">
                    <if test="companyId != null">
                        company_id=#{companyId}
                    </if>
                </when>
                <otherwise>
                    company_id IN
                    (SELECT c.id FROM tb_company c WHERE c.organization_id =#{organizationId})
                    <if test="companyId != null">
                        AND company_id=#{companyId}
                    </if>
                </otherwise>
            </choose>
            AND name LIKE #{name}
        </where>
        ORDER BY updated_time DESC
    </select>


    <select id="getDeptName" resultType="string">
        SELECT name parentName
        FROM tb_department
        WHERE id = #{id}
    </select>
    <select id="getDepartment" resultMap="BaseResultWithCompany">
        SELECT *
        FROM tb_department
        WHERE id = #{id}
          AND version = #{version}
    </select>


</mapper>