<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosssoft.hr.train.spring.dao.UserDao">

    <select id="getUsersLikeName" resultType="com.bosssoft.hr.train.spring.bean.User">
        select * from spring_user
        <where>
            name like #{name}
        </where>
    </select>

    <select id="getUserById" resultType="com.bosssoft.hr.train.spring.bean.User">
        select *
        from spring_user
        where id = #{id}
    </select>

    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        insert into spring_user(name)
        values (#{name})
    </insert>

    <delete id="deleteById">
        delete
        from spring_user
        where id = #{id}
    </delete>
</mapper>