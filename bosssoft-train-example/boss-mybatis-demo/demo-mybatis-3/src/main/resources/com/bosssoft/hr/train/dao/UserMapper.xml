<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bosssoft.hr.train.dao.UserMapper">

    <!--更新-->
    <update id="updateUser">
        update tb_user
        <set>
            <if test="lastName != null">
                last_name=#{lastName},
            </if>
            <if test="gender==0 or gender==1">
                gender=#{gender}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>
    <!--查找-->
    <select id="selectUsersByCondition" resultType="com.bosssoft.hr.train.bean.User">
        select * from tb_user
        <where>
            <choose>
                <when test="id != null">
                    id=#{id}
                </when>
                <when test="lastName != null">
                    last_name like #{lastName}
                </when>
                <otherwise>
                    gender=0
                </otherwise>
            </choose>
        </where>
    </select>

    <!--批量插入-->
    <insert id="insertUsers">
        insert into tb_user(last_name, gender) VALUES
        <foreach collection="users" item="user" separator=",">
            (#{user.lastName},#{user.gender})
        </foreach>
    </insert>


</mapper>