<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3Simple">
        <!--jdbcConnection:指定如何连接到目标数据库-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/mybatis?useSSL=true&amp;allowMultiQueries=true"
                        userId="root"
                        password="root">
        </jdbcConnection>
        <!--javaTypeResolver java类型解析器:-->
        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>
        <!--javaModelGenerator:javaBean生成策略
            targetPackage:生成目标包名
            targetProject:生成在哪个工程下
        -->
        <javaModelGenerator targetPackage="com.atguigu.mybatis.bean" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--sqlMapGenerator:sql映射生成策略-->
        <sqlMapGenerator targetPackage="com.atguigu.mybatis.dao"  targetProject=".\src\main\resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>


        <!--javaClientGenerator:指定mapper接口位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.atguigu.mybatis.dao"  targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>


        <!--table指向要逆向生成哪些表:根据这些表要创建javaBean-->
        <table tableName="tbl_employee" domainObjectName="Employee"></table>
        <table tableName="tbl_dept" domainObjectName="Department"></table>
        <!--        <table schema="DB2ADMIN" tableName="ALLTYPES" domainObjectName="Customer" >
                    <property name="useActualColumnNames" value="true"/>
                    <generatedKey column="ID" sqlStatement="DB2" identity="true" />
                    <columnOverride column="DATE_FIELD" property="startDate" />
                    <ignoreColumn column="FRED" />
                    <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />
                </table>-->

    </context>
</generatorConfiguration>